  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <group id="smartbearGroup" text="Smartbear Collaborator" description="Smartbear Collaborator" popup="true" >
          <add-to-group group-id="VcsGroups" anchor="last" />
          <action id="LoginActn" class="com.smartbear.collab.plugin.login.LoginActn" text="Server Login"
                  description="Login to server">
          </action>
      </group>
  </actions>

