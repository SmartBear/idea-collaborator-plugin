<idea-plugin version="2">
  <id>com.smartbear.collab.plugin</id>
  <name>Smartbear Collaborator</name>
  <version>1.0</version>
  <vendor email="support@yourcompany.com" url="http://www.smartbear.com">Smartbear</vendor>

  <description><![CDATA[
      Smartbear Collaborator code reviews plugin.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
