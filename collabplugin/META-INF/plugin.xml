<idea-plugin version="2">
  <id>com.smartbear.collab.plugin</id>
  <name>Smartbear Collaborator</name>
  <version>0.2</version>
  <vendor email="support@yourcompany.com" url="http://www.smartbear.com">Smartbear</vendor>

  <description><![CDATA[
      Smartbear Collaborator code reviews plugin.<br>
      <!--em>most HTML tags may be used</em-->
    ]]></description>

  <change-notes><![CDATA[
      New Smartbear Collaborator menu added.<br>
      <!--em>most HTML tags may be used</em-->
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>Git4Idea</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <applicationConfigurable groupId="tools" displayName="Smartbear Collaborator" id="smartbear.collaborator" instance="com.smartbear.collab.plugin.login.ui.Login" />

  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
